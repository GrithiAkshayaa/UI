import React from "react";
import { useLocation } from "react-router-dom";

const DeviceOptions = () => {
  const location = useLocation();
  const deviceType = location.state?.deviceType || "Device";

  return (
    <div className="device-options-container">
      <h2>Device: {deviceType.toUpperCase()}</h2>
      <div style={{ display: "flex", flexDirection: "column", gap: "10px", marginTop: "20px" }}>
        <button>Configuration Management</button>
        <button>Performance Management</button>
        <button>Fault Management</button>
      </div>
    </div>
  );
};

export default DeviceOptions;
