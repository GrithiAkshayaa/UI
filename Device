import React from "react";
import { useLocation } from "react-router-dom";

const DeviceOptions = () => {
  const location = useLocation();
  const deviceName = location.state?.deviceName || "Device";

  return (
    <div className="device-options-container">
      <h2>Device: {deviceName.toUpperCase()}</h2>
      <div className="button-group">
        <button className="btn">Configuration Management</button>
        <button className="btn">Performance Management</button>
        <button className="btn">Fault Management</button>
      </div>
    </div>
  );
};

export default DeviceOptions;
